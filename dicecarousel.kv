#:kivy 1.0.9
#:import Factory kivy.factory.Factory

#for AddBox
<NumberSelect>:
    orientation: 'vertical'
    Button:
        id:title
        size_hint: 1, 0.5
        on_press: root.open_pad()
        background_color: (0.6, 0.4, 1.0, 1.0)
        halign: 'center'
    Button:
        id: number
        size_hint: 1, 0.5
        on_press: root.open_pad()
        background_color: (0.2, 0.1, 0.4, 1.0)
        halign: 'center'
<WeightsPopup>:
    size_hint: None, None
    title: ''
    title_size: 0
    ScrollView:
        id:scroll_shell
        scroll_timeout:70
        StackLayout:
            id: contents
            orientation: 'tb-lr'
            size_hint: None, None

#for GraphBox
<PlotPopup>:
    title: 'click the legend button for legend.  click on a label to highlight that plot.'
    FloatLayout:
        ScatterLayout:
            id: graph_container
            auto_bring_to_front: False
            do_rotation: False
            size_hint: 1,1
            Graph:
                id: graph
                xlabel: 'the rolls'
                ylabel: 'percent chance'
                y_grid_label: True
                x_grid_label: True
                x_grid: True
                y_grid: True
                x_ticks_major: 2
                y_ticks_major: 1
        Button:
            text:'done'
            size_hint: 0.1, 0.1
            on_press: root.dismiss()
        Button:
            id: legend
            text:'legend'
            size_hint: None, 0.07
            width: self.texture_size[0]
            padding_x: 10
            pos_hint: {'x': 0, 'y': 0.9}
<PlotCheckBox>:
    orientation: 'horizontal'
    CheckBox:
        id: check_box
        size_hint: 0.1, 1
        active: root.active
        canvas:
            Color:
                rgba: 1, 1, 1, 0.4  
            Line: 
                points: self.pos[0] + self.size[0]/4, self.pos[1] +self.size[1]/4, self.pos[0] + 3*self.size[0]/4, self.pos[1] + self.size[1]/4, self.pos[0] + 3*self.size[0]/4, self.pos[1] + 3*self.size[1]/4, self.pos[0] + self.size[0]/4, self.pos[1] + 3*self.size[1]/4, self.pos[0] + self.size[0]/4, self.pos[1] +self.size[1]/4
                width: 3 
                joint: 'miter'
                cap: 'square'
    ScrollView:
        id:scroller
        scroll_timeout: 550
        bar_inactive_color: [0.7, 0.7, 0.7, 0.9]
        size_hint: 0.9, 1
        FlashLabel:
            id:label
            text: ''
            size_hint: None, 1
            width: self.texture_size[0]

#for InfoBox
<PageBox>:
    orientation:'vertical'
    Label:
        id: page_box_title
        canvas:
            Color:
                rgba: 0.8,0,0,0.5
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint:1, .04
        halign: 'center'
        valign: 'middle'
        text: 'TITLE'
        text_size:self.size
    BoxLayout:
        id:buttons_container
        orientation: 'horizontal'
        size_hint: 1, 0.07
        Button:
            id:previous
            size_hint: 0.3, 1
            text: '<==='
            text_size:self.size
            halign: 'right'
            valign: 'middle'
            shorten:True
            shorten_from: 'right'
            max_lines: 1
            on_press: root.parent_obj.previous(root.key)
        Label:
            id:pages
            size_hint: 0.4, 1
            font_size: (lambda:min(int(0.5 * self.height), int(0.25 * self.width)))()
        Button:
            id:next
            size_hint: 0.3, 1
            text: '===>'
            text_size:self.size
            halign: 'left'
            valign: 'middle'
            shorten:True
            shorten_from: 'left'
            max_lines: 1
            on_press: root.parent_obj.next(root.key)
    BoxLayout:
        id: text_shell
        orientation: 'horizontal'
        size_hint: 1, 0.89
        canvas:
            Color:
                rgba: 0.4,0.8,0.8,0.3
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            
            id:text_container
            size_hint: 0.8, 1
            text:''
            valign: 'top'
            text_size: self.width, self.height
        Slider:
            id:choose
            orientation:'vertical'
            min:1
            max:1
            value: 1
            step:1
            size_hint:0.2, 1
            on_value:root.parent_obj.choose(self, root.key)

#big boxes
<ChangeBox>:
    Label:
        id: intro
        text: ''
        text_size:self.size
        valign: 'top'
        halign: 'center'

<MySpinnerOption@SpinnerOption>:
    background_color: .2, .4, 1, .8
<AddBox>:
    id:bob
    orientation:'vertical'
    Label:
        id: current
        size_hint: 1, 0.1
        text: 'no dice yet'
        text_size: self.size
    BoxLayout:
        id: custom
        size_hint:1, 0.2
        spacing: 30
        padding: 30
        BoxLayout:
            orientation: 'vertical'
            id: custom_size
            size_hint: 0.5, 1
            Label:
                size_hint: 1, 0.6
                text: 'type custom die size from 2-200'
                text_size: self.size
            NumberInput:
                id:custom_input
                size_hint: 1, 0.4
                on_changed: root.assign_size_text(self.text)
        BoxLayout:
            size_hint: 0.5, 1
            orientation: 'horizontal'
            FlashButton:
                id:make_weights
                size_hint: 0.5, 1
                text: 'make\nweights'
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                on_press: self.delay(root.add_weights)
            BoxLayout:
                size_hint: 0.5, 1
                orientation: 'vertical'
                Label:
                    size_hint: 1, 0.5
                    text: 'strength\nv'
                    halign: 'center'
                    valign: 'middle'
                    #texture_size: self.size
                Spinner:
                    size_hint: 1, 0.5
                    #sync_height: True
                    #TODO uncomment in version 1.9.2
                    id: multiplier
                    text: 'X1'
                    values: ['X{}'.format(num) for num in range(1, 11)]
                    option_cls: Factory.get('MySpinnerOption')
    BoxLayout:
        id: size_mod
        orientation: 'horizontal'
        size_hint: 1, 0.38
        GridLayout:
            id:presets
            rows: 2
            size_hint: 0.75, 1
        BoxLayout:
            orientation:'vertical'
            size_hint: 0.25, 1
            Label:
                text:'add a modifier'
                text_size: self.size
                halign: 'center'
                size_hint: 1, 0.2
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.8
                Label:
                    id: slider_num
                    text: str(int(modifier.value))
                    size_hint: 0.25, 1
                Slider:
                    id: modifier
                    orientation: 'vertical'
                    min:-5
                    max:5
                    value:0
                    step:1
                    on_value:root.assign_mod()
                    size_hint: 0.75, 1
                    canvas:
                        Color:
                            rgba:1,0,0,0.5
                        Rectangle:
                            size:self.size
                            pos:self.pos
    Label:
        id: instructions
        size_hint:1, 0.06
        text: 'assign die size/weight/mod-----------------\n-------------------------add the assigned die'
        halign: 'center'
    BoxLayout:
        id: add_it
        size_hint:1, 0.21
        orientation:'horizontal'
        padding: 10
        spacing: 10

<GraphBox>:
    orientation: 'vertical'
    StackLayout:
    #BoxLayout:
        id: graph_space
        #orientation: 'vertical'
        orientation: 'lr-tb'
        size_hint: 1, 0.9
    BoxLayout:
        size_hint: 1, 0.1
        FlashButton:
            id: graph_stuff
            text: 'graph it'
            text_size: self.size
            size: self.texture_size
            size_hint: 0.33, 1
            halign: 'center'
            valign: 'middle'
            on_press: self.delay(root.graph_it)
        Button:
            id: clear_selected
            text: 'clear selected'
            text_size: self.size
            size: self.texture_size
            size_hint: 0.33, 1
            halign: 'center'
            valign: 'middle'
            on_press: root.clear_selected()
        Button:
            id: clear_all
            text: 'clear history'
            text_size: self.size
            size: self.texture_size
            size_hint: 0.33, 1
            halign: 'center'
            valign: 'middle'
            on_press: root.confirm.open()

<StatBox>:
    BoxLayout:
        spacing: 10
        orientation: 'vertical'
        Label:
            id: info_text
            size_hint: 1, 0.2
            text: 'no dice yet'
            text_size: self.size
            valign: 'middle'
            halign: 'center'
        FloatLayout:
            size_hint: 1, 0.4
            #top row - value1 value2
            Label:
                text:'value 1'
                text_size: self.size
                size_hint:0.25, 0.1
                pos_hint: {'x': 0.1, 'y': 0}
            Label:
                size_hint:0.25, 0.1
                text: 'value 2'
                text_size: self.size
                pos_hint: {'x': 0.5, 'y': 0}
            #2nd row slider
            Slider:
                id:slider_1
                orientation:'vertical'
                min:0
                max:100
                value:1
                step: 1
                size_hint:0.25, 0.82
                on_value:root.assign_slider_value()
                pos_hint: {'x': 0.2, 'y': 0.0}
            Slider:
                id: slider_2
                orientation:'vertical'
                min:0
                max:100
                value:1
                step:1
                on_value:root.assign_slider_value()
                size_hint:0.25, 0.82
                pos_hint: {'x': 0.6, 'y': 0.0}
            #thrid row text input
            Label:
                text:'may type\nin values'
                text_size: self.size
                size_hint:0.2, 0.15
                pos_hint: {'x': 0.01, 'y': 0.9}
            NumberInput:
                id: slider_1_text
                text: '{:,}'.format(int(slider_1.value))
                size_hint:0.3, 0.15
                pos_hint: {'x': 0.2, 'y': 0.9}
                on_text: root.assign_text_value()
            NumberInput:
                id: slider_2_text
                text: '{:,}'.format(int(slider_2.value))
                size_hint:0.3, 0.15
                pos_hint: {'x': 0.6, 'y': 0.9}
                on_text: root.assign_text_value()
        Label:
            id:stat_text
            text:'no stats'
            text_size:self.size
            #size: self.texture_size
            size_hint: 1, 0.4
            valign:'top'

<InfoBox>:
    id: all_rolls_info
    orientation: 'horizontal'
    PageBox:
        id: full_text
        key: 'full_text'
        size_hint: 0.5, 1
        parent_obj: root
    BoxLayout:    
        id: info_weights    
        orientation: 'vertical'
        size_hint: 0.5, 1
        spacing:10
        padding: 5
        Label:
            id:general_info
            size_hint: 1, 0.15
            text:'test'
            text_size: self.size
            halign: 'center'
        ScrollView:
            id:table_str_wrapper
            size_hint: 1, 0.25
            Label:
                id:table_str
                text: 500*'adfgdg\n'
                size_hint: 1, None
                text_size: self.width, None
                height: table_str.texture_size[1]
                halign: 'center'
        PageBox:
            id: weights_info
            key: 'weights_info'
            parent_obj: root
            size_hint: 1, 0.6


#parent
<DicePlatform>:
    ChangeBox:
        id: change_box
        size_hint: 1,1
    AddBox:
        id: add_box
        size_hint: 1,1
    GraphBox:
        id: graph_box
        size_hint: 1,1
    StatBox:
        id: stat_box
        size_hint: 1,1
    InfoBox:
        id: info_box
        size_hint: 1,1
        


